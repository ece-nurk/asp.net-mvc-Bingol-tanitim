@using yeniBingöl.Models
@model LoginViewModel

@{
    ViewBag.Title = "Oturum Aç";
}

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="mb-0">@ViewBag.Title</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <p class="text-muted">Oturum açmak için bir yerel hesap kullanın.</p>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <!-- Email -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-posta adresinizi girin" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi girin" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <!-- Remember Me -->
                        <div class="form-check mb-3">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Oturum Aç</button>
                        </div>

                        <!-- Additional Links -->
                        <div class="mt-3 text-center">
                            <p>
                                @Html.ActionLink("Yeni bir kullanıcı olarak kaydol", "Register", null, new { @class = "text-dark" })
                            </p>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>
