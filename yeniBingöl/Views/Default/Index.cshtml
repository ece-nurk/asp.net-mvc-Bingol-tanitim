@{
    ViewBag.Title =yeniBingöl.Kaynak.lang.deger1;   
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Anasayfa";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<section class="w3l-covers-4">
    <div id="covers4-block">
        <div class="main-slider">
            <div class="csslider infinity" id="slider1">
                @* Dinamik olarak slider *@
                @if (ViewBag.Fotolar != null)
                {
                    int index = 1;
                    foreach (var foto in ViewBag.Fotolar)
                    {
                        <input type="radio" name="slides" id="slides_@index" @(index == 1 ? "checked='checked'" : "") />
                        index++;
                    }
                }

                <ul>
                    @if (ViewBag.Fotolar != null)
                    {
                        int index = 1;
                        foreach (var foto in ViewBag.Fotolar)
                        {
                            <li class="slider-bg-@index" style="background-image: url('@foto.Url');">
                                <div class="slider-info-wrapper">
                                    <div class="slider-info">
                                        <div class="d-grid slide-two-col">
                                            <div class="slide-left-text">
                                                <h3>Bingöl ve eşsiz güzellikleri</h3>
                                                <h3><span>@foto.Baslik</span></h3>
                                                <p>
                                                    Kendi kendine hareket eden bu doğa harikası, Bingöl’ün eşsiz güzelliklerinden biridir.Yüzen Ada, doğa severler için benzersiz bir deneyim sunar.
                                                </p>
                                                <a href="/Default/Tarih" class="btn button-style">Tarih ve Turistik Yerler</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            index++;
                        }
                    }
                </ul>

                <div class="arrows">
                    @if (ViewBag.Fotolar != null)
                    {
                        int index = 1;
                        foreach (var foto in ViewBag.Fotolar)
                        {
                            <label for="slides_@index"></label>
                            index++;
                        }
                    }
                </div>
                <div class="navigation">
                    <div>
                        @if (ViewBag.Fotolar != null)
                        {
                            int index = 1;
                            foreach (var foto in ViewBag.Fotolar)
                            {
                                <label for="slides_@index"></label>
                                index++;
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


